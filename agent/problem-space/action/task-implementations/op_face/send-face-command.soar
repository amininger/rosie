sp {op_face1*external*apply*send-face-command*cozmo*coord
   (state <s> ^name op_face1
              ^problem-space.execution-type external
              ^operator <o>
              ^agent-params.domain cozmo
              ^target-coord <coord>
              ^current-task-segment <seg>
              ^io.input-link.self.pose <pose>
              ^top-state.io.output-link <out>)
   (<o> ^name send-face-command
        ^command-name <cmd-name>)
   (<pose> ^x <x> ^y <y>)
   (<coord> ^x <cx> ^y <cy>)
-->
   (<out> ^turn-in-place <tip>)
   (<tip> ^item-type output-command
          ^absolute true
          ^angle (* (atan2 (- <cy> <y>) (- <cx> <x>) ) 57.3)
          ^speed 45)
   (<seg> ^<cmd-name> <tip>)
}

sp {op_face1*external*apply*send-face-command*magicbot*orient
   (state <s> ^name op_face1
              ^problem-space.execution-type external
              ^operator <o>
              ^agent-params.domain magicbot
              ^yaw-to-target <yaw>
              ^current-task-segment <seg>
              ^top-state.io.output-link <out>)
   (<o> ^name send-face-command
        ^command-name <cmd-name>)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name orient
          ^parameters.yaw <yaw>
          ^termination-condition.name stabilized)
   (<seg> ^<cmd-name> <law>)
}
